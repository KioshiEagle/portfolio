---
// src/components/ProjectCard.astro
import type { Project } from '../types';
const { project } = Astro.props as { project: Project };
---

<div class="card">
  <span class="category">{project.category}</span>
  <h3>{project.title}</h3>
  <p>{project.description}</p>
  <div class="tags">
    {project.tags.map(tag => <span>#{tag}</span>)}
  </div>
  {project.githubUrl && <a href={project.githubUrl} target="_blank">Code source â†’</a>}
</div>

<style>
  .card {
    background: #1e293b;
    color: white;
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid #334155;
    transition: transform 0.2s;
  }
  .card:hover { transform: translateY(-5px); }
  .category { color: #3b82f6; font-size: 0.8rem; font-weight: bold; text-transform: uppercase; }
  h3 { margin: 0.5rem 0; font-size: 1.5rem; }
  .tags { margin: 1rem 0; font-size: 0.9rem; color: #94a3b8; display: flex; gap: 10px; }
  a { color: #22c55e; text-decoration: none; font-weight: bold; }
</style>